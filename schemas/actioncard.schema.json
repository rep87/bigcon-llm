{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent2Answers",
  "type": "object",
  "required": ["answers"],
  "properties": {
    "answers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "idea_title",
          "audience",
          "channels",
          "execution",
          "copy_samples",
          "measurement",
          "evidence"
        ],
        "properties": {
          "idea_title": {"type": "string"},
          "audience": {"type": "string"},
          "channels": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          },
          "execution": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          },
          "copy_samples": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          },
          "measurement": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["source", "key", "value"],
              "properties": {
                "source": {
                  "type": "string",
                  "enum": ["STRUCTURED", "RAG", "WEATHER", "EXTERNAL", "NONE"]
                },
                "key": {"type": "string"},
                "value": {"type": ["string", "number", "null"]},
                "period": {"type": ["string", "null"]},
                "snippet": {"type": ["string", "null"]},
                "doc_id": {"type": ["string", "null"]},
                "chunk_id": {"type": ["string", "number", "null"]},
                "score": {"type": ["number", "null"]}
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
